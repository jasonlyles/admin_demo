<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Building</th>
      <th>Apartment type</th>
      <th>Apt number</th>
      <th>Bathroom count</th>
      <th>Bedroom count</th>
      <th>Room count</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.building_id %></td>
        <td><%= apartment.apartment_type_id %></td>
        <td><%= apartment.apt_number %></td>
        <td><%= apartment.bathroom_count %></td>
        <td><%= apartment.bedroom_count %></td>
        <td><%= apartment.room_count %></td>
        <td><%= apartment.notes %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

