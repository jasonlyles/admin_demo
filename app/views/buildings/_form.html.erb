<%= form_with(model: building, local: true) do |form| %>
<% if building.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(building.errors.count, "error") %>
      prohibited this building from being saved:</h2>

    <ul>
      <% building.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :name %>
  <%= form.text_field :name, id: :building_name %>
</div>

<div class="field">
  <%= form.label :description %>
  <%= form.text_area :description, id: :building_description %>
</div>

<div class="field">
  <%= form.label :street_address %>
  <%= form.text_field :street_address, id: :building_street_address %>
</div>

<div class="field">
  <%= form.label :city %>
  <%= form.text_field :city, id: :building_city %>
</div>

<div class="field">
  <%= form.label :state_id %>
  <%= form.number_field :state_id, id: :building_state_id %>
</div>

<div class="field">
  <%= form.label :zip %>
  <%= form.text_field :zip, id: :building_zip %>
</div>

<div class="field">
  <%= form.label :manager_name %>
  <%= form.text_field :manager_name, id: :building_manager_name %>
</div>

<div class="field">
  <%= form.label :phone_number %>
  <%= form.text_field :phone_number, id: :building_phone_number %>
</div>

<div class="field">
  <%= form.label :notes %>
  <%= form.text_area :notes, id: :building_notes %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>