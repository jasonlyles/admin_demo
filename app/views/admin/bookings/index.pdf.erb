<h3>Bookings</h3>
<table id="resources">
  <tr>
    <th>Building</th>
    <th>Apartment</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Guests</th>
    <th>Monthly Rate</th>
  </tr>
  <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.building.name %></td>
      <td><%= booking.apartment.name %></td>
      <td><%= booking.booking_start_date %></td>
      <td><%= booking.booking_end_date %></td>
      <td><%= booking.status %></td>
      <td><%= booking.guests.collect(&:full_name).join(', ') %></td>
      <td><%= number_to_currency(booking.actual_monthly_rate, precision: 0) %></td>
    </tr>
  <% end %>
</table>