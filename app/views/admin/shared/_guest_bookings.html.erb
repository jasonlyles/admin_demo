<div class="panel">
  <h3>Booking History for this Guest</h3>
  <div class="panel_contents">
    <div id="table_for_bookings" class="attributes_table booking">
      <table cellspacing="0" cellpadding="0" border="0">
        <thead>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Building</th>
          <th>Apartment</th>
          <th>Monthly Rate</th>
        </thead>
        <tbody>
          <% bookings.each do |booking| %>
            <tr>
              <td><%= booking.booking_start_date %></td>
              <td><%= booking.booking_end_date %></td>
              <td><%= booking.building.name %></td>
              <td><%= booking.apartment.name %></td>
              <td><%= number_to_currency(booking.actual_monthly_rate, precision: 0) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>